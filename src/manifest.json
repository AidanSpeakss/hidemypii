{
  "background": {
    "scripts": ["background.js"]
  },
  "manifest_version": 2,
  "name": "Streamer Mode for Firefox",
  "version": "0.2",
  "description": "Hides personal information from pages, similar to Discord's Streamer mode.",
  "icons": {
    "48": "icons/icon.png"
  },
  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_title": "Streamer Mode for Firefox!"
  },
  "options_ui": {
    "page": "options.html",
    "browser_style": false
  },
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "exclude_matches": [ "http://*.facebook.com/*", "https://*.facebook.com/*"],
      "matches":   [ "http://*/*", "https://*/*", "file:///*"],
      "js":        [ "background.js" ]
    },
    {
      "matches":   [ "http://*/*", "https://*/*", "file:///*"],
      "css":        [ "background.css" ],
      "run_at": "document_start"
    },
    {
      "matches":   [ "http://*.facebook.com/*", "https://*.facebook.com/*"],
      "js":        [ "exclude.js" ]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "{8a05d8ec-f62f-4bcb-a93c-b2d606fb562f}",
      "strict_min_version": "42.0"
    }
  }

}